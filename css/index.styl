// welcome
.welcome
	height: 100vh
	max-height: 840px
	.container
		height: 100%
		.flex
			display: flex
			align-items: center
			justify-content: center
			height: 100%
		h1, img
			position: relative
			text-align: center
	.logos
		background: rgba(255,255,255,0.8)
		padding: 50px
		display: flex
		justify-content: space-between
		margin-bottom: 70px
		.logo
			flex: 1 1 100%
			text-align: center
			display: flex
			align-items: center
			img
				margin: 0 auto
				max-height: 160px

// cards
.cards
	display: flex
	justify-content: space-between
	margin-left: -30px
	@media (max-width: 600px)
		flex-wrap: wrap
	.card
		margin-left: 30px
		flex: 1 1 100%
		svg
			width: 100%
			height: 100px
			fill: white
		.card-title
			width: 100%
			display: block
			text-align: center

// circles
.circles
	margin-bottom: 90px
	img
		width: 100%
	.wrap
		position: relative
		margin-top: 30px
	.design
		position: absolute
		top: -40px
		left: 430px
		color: #1E88E5
		font-size: 28px
	.technology
		position: absolute
		top: 910px
		left: 0
		color: #1E88E5
		font-size: 28px
	.materials
		position: absolute
		top: 910px
		right: 0
		color: #1E88E5
		font-size: 28px

// request
.request
	margin: 90px 0
.request-form
	display: flex
	align-items: baseline
	.input-field
		flex: 1 0 auto
		margin-right: 30px

// fix
body
	background: green
.page-footer a
	text-decoration: underline
nav ul a.active
	background: #9e9e9e
@media (min-width: 1080px)
	.container
		width: 1080px !important
.side-nav li
	padding: 0